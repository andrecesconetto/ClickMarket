@model IEnumerable<ClickMarket.Business.Models.Vendedor>

<h2>Gerenciamento de Vendedores</h2>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Status</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendedor in Model)
        {
            <tr>
                <td>@vendedor.Nome</td>
                <td>@vendedor.Email</td>
                <td>@(vendedor.Ativo ? "Ativo" : "Inativo")</td>
                <td>
                    <form asp-action="AlterarStatus" method="post">
                        <input type="hidden" name="id" value="@vendedor.Id" />
                        <button class="btn btn-sm @(vendedor.Ativo ? "btn-danger" : "btn-success")">
                            @(vendedor.Ativo ? "Inativar" : "Reativar")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
